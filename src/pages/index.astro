---
import XPLayout from '../layouts/XPLayout.astro';
import XPDesktop from '../components/xp/XPDesktop.astro';
import XPTaskbar from '../components/xp/XPTaskbar.astro';
import XPStartMenu from '../components/xp/XPStartMenu.astro';

// Window components
import WelcomeWindow from '../components/windows/WelcomeWindow.astro';
import AboutWindow from '../components/windows/AboutWindow.astro';
import ProjectsWindow from '../components/windows/ProjectsWindow.astro';
import ProjectDetailWindow from '../components/windows/ProjectDetailWindow.astro';
import ContactWindow from '../components/windows/ContactWindow.astro';

// Desktop icons configuration
const desktopIcons = [
  {
    id: 'icon-welcome',
    label: 'Welcome',
    icon: '/assets/xp/computer.svg',
    windowId: 'welcome',
  },
  {
    id: 'icon-about',
    label: 'About Me',
    icon: '/assets/xp/user.svg',
    windowId: 'about',
  },
  {
    id: 'icon-projects',
    label: 'My Projects',
    icon: '/assets/xp/folder.svg',
    windowId: 'projects',
  },
  {
    id: 'icon-contact',
    label: 'Contact',
    icon: '/assets/xp/email.svg',
    windowId: 'contact',
  },
];

// Start menu items
const startMenuLeft = [
  {
    id: 'start-welcome',
    label: 'Welcome',
    icon: '/assets/xp/computer.svg',
    windowId: 'welcome',
  },
  {
    id: 'start-about',
    label: 'About Me',
    icon: '/assets/xp/notepad.svg',
    windowId: 'about',
  },
  {
    id: 'start-projects',
    label: 'My Projects',
    icon: '/assets/xp/folder.svg',
    windowId: 'projects',
  },
];

const startMenuRight = [
  {
    id: 'start-contact',
    label: 'Contact',
    icon: '/assets/xp/email.svg',
    windowId: 'contact',
  },
];
---

<XPLayout
  title="Matthew Alunni - Software Engineer"
  description="Interactive Windows XP-themed portfolio of Matthew Alunni, Software Engineer"
>
  <XPDesktop icons={desktopIcons}>
    <Fragment slot="windows">
      <WelcomeWindow />
      <AboutWindow />
      <ProjectsWindow />
      <ProjectDetailWindow />
      <ContactWindow />
    </Fragment>
  </XPDesktop>

  <XPStartMenu
    userName="Matthew"
    leftItems={startMenuLeft}
    rightItems={startMenuRight}
  />

  <XPTaskbar />
</XPLayout>
