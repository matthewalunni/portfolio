---
import XPWindow from '../xp/XPWindow.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<XPWindow
  id="contact"
  title="Contact - Outlook Express"
  icon="/assets/xp/email.svg"
  width={450}
  height={350}
  x={250}
  y={120}
  isOpen={false}
>
  <div class="contact-content">
    <div class="contact-header">
      <svg class="contact-icon" width="48" height="48" viewBox="0 0 48 48" fill="none">
        <rect x="4" y="8" width="40" height="32" rx="2" fill="#f0e68c" stroke="#b8a41f" stroke-width="2"/>
        <path d="M4 12L24 28L44 12" stroke="#b8a41f" stroke-width="2"/>
      </svg>
      <div>
        <h1>Get in Touch</h1>
        <p>I'd love to hear from you!</p>
      </div>
    </div>

    <div class="contact-body">
      <p>
        Have a question, want to work together, or just want to say hi?
        Feel free to reach out through any of the following channels:
      </p>

      <div class="contact-links">
        <a href="mailto:matthew.alunni@gmail.com" class="contact-link">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <rect x="2" y="4" width="16" height="12" rx="1" stroke="currentColor" stroke-width="1.5"/>
            <path d="M2 5L10 11L18 5" stroke="currentColor" stroke-width="1.5"/>
          </svg>
          <span>matthew.alunni@gmail.com</span>
        </a>

        <a href="https://github.com/matthewalunni" target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M10 0C4.477 0 0 4.477 0 10c0 4.42 2.865 8.166 6.839 9.489.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.341-3.369-1.341-.454-1.155-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0110 4.836c.85.004 1.705.114 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C17.138 18.163 20 14.418 20 10c0-5.523-4.477-10-10-10z"/>
          </svg>
          <span>github.com/matthewalunni</span>
        </a>

        <a href="https://linkedin.com/in/matthewalunni" target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
            <path d="M18 0H2C.9 0 0 .9 0 2v16c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V2c0-1.1-.9-2-2-2zM6 17H3V8h3v9zM4.5 6.5c-1 0-1.5-.7-1.5-1.5s.6-1.5 1.5-1.5 1.5.7 1.5 1.5-.5 1.5-1.5 1.5zM17 17h-3v-5c0-1.2-.4-2-1.5-2-1 0-1.5.7-1.5 2v5H8V8h3v1.2c.5-.7 1.3-1.2 2.5-1.2 2 0 3.5 1.3 3.5 4v5z"/>
          </svg>
          <span>linkedin.com/in/matthewalunni</span>
        </a>
      </div>

      <div class="contact-action">
        <a href="mailto:matthew.alunni@gmail.com" class="xp-btn xp-btn--primary">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M1 4l7 4 7-4M1 4v8h14V4H1z" stroke="currentColor" stroke-width="1.5"/>
          </svg>
          Send Email
        </a>
      </div>
    </div>
  </div>
</XPWindow>

<style>
  .contact-content {
    font-family: var(--xp-font-system);
  }

  .contact-header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
    padding-bottom: 16px;
    border-bottom: 1px solid #d4d0c8;
  }

  .contact-icon {
    flex-shrink: 0;
  }

  .contact-header h1 {
    font-size: 18px;
    margin: 0 0 4px 0;
    color: #003399;
  }

  .contact-header p {
    margin: 0;
    color: #666;
  }

  .contact-body p {
    margin: 0 0 16px 0;
    line-height: 1.5;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 20px;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 12px;
    background: #f8f8f5;
    border: 1px solid #d4d0c8;
    border-radius: 3px;
    color: #333;
    text-decoration: none;
    transition: background 0.15s;
  }

  .contact-link:hover {
    background: #e8e8e0;
    border-color: #b8b8b0;
  }

  .contact-link svg {
    flex-shrink: 0;
    color: #666;
  }

  .contact-link:hover svg {
    color: #003399;
  }

  .contact-link span {
    font-size: 12px;
  }

  .contact-action {
    display: flex;
    justify-content: center;
    padding-top: 16px;
    border-top: 1px solid #d4d0c8;
  }

  .contact-action .xp-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 20px;
    height: auto;
    font-size: 12px;
    text-decoration: none;
  }
</style>
